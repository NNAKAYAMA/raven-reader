{
  "name": "raven-reader",
  "productName": "Raven Reader",
  "version": "0.7.2",
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  },
  "author": "Hello Efficiency Inc <welcome@helloefficiency.com>",
  "description": "Simple Desktop RSS Reader made using VueJS",
  "license": "LGPL-3.0",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js && electron-builder",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "build:web": "cross-env BUILD_TARGET=web node .electron-vue/build.js",
    "release:mac": "electron-builder build --mac -p always",
    "release:other": "electron-builder build --win --linux -p always",
    "dev": "node .electron-vue/dev-runner.js",
    "e2e": "npm run pack && mocha test/e2e",
    "e2e:no-compile": "mocha test/e2e",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js",
    "postinstall": "npm run lint:fix",
    "test": "npm run unit && npm run e2e",
    "unit": "karma start test/unit/karma.conf.js"
  },
  "build": {
    "productName": "Raven Reader",
    "appId": "org.helloefficiency.ravenreader",
    "afterSign": "notarize.js",
    "directories": {
      "output": "build"
    },
    "asarUnpack": [
      "./node_modules/node-notifier/vendor/**"
    ],
    "files": [
      "dist/electron/**/*"
    ],
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./entitlements.mac.inherit.plist",
      "target": [
        "dmg"
      ],
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "category": "News",
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "@postlight/mercury-parser": "^2.0.0",
    "axios": "^0.19.0",
    "bootstrap-vue": "^2.0.0-rc.11",
    "cheerio": "^1.0.0-rc.2",
    "dayjs": "^1.6.2",
    "electron-context-menu": "^0.15.0",
    "electron-store": "^5.0.0",
    "electron-updater": "^4.0.6",
    "electron-util": "^0.13.0",
    "feather-icons": "^4.7.3",
    "fs-jetpack": "^2.0.0",
    "fuse.js": "^3.2.1",
    "global-agent": "^2.0.0",
    "he": "^1.1.1",
    "lodash": "^4.17.11",
    "nedb": "^1.8.0",
    "node-fetch": "^2.6.0",
    "node-machine-id": "^1.1.12",
    "node-notifier": "^6.0.0",
    "node-opml-parser": "^1.0.0",
    "node-powershell": "^4.0.0",
    "node-schedule": "^1.3.0",
    "opml-generator": "^1.1.1",
    "reading-time": "^1.1.2",
    "rss-parser": "^3.6.2",
    "uuid-by-string": "^3.0.2",
    "v-click-outside": "^3.0.0",
    "v8-compile-cache": "^2.1.0",
    "vue-social-sharing": "^2.4.3",
    "vue-toasted": "^1.1.26",
    "vue2-perfect-scrollbar": "^1.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babili-webpack-plugin": "^0.1.2",
    "bootstrap": "^4.1.1",
    "cfonts": "^2.1.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^1.0.0",
    "chalk": "^3.0.0",
    "copy-webpack-plugin": "^5.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.0.0",
    "del": "^5.0.0",
    "devtron": "^1.4.0",
    "dotenv": "^8.1.0",
    "electron": "^7.1.1",
    "electron-builder": "^21.2.0",
    "electron-debug": "^3.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-log": "^3.0.0",
    "electron-notarize": "^0.2.0",
    "eslint": "^5.1.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^4.0.0",
    "hoek": "^6.1.2",
    "html-webpack-plugin": "^3.2.0",
    "jquery": "^3.3.1",
    "karma": "^4.1.0",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^2.0.1",
    "karma-electron": "^6.0.0",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^4.0.2",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.1.4",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.9.0",
    "parse-favicon": "^2.0.0",
    "require-dir": "^1.2.0",
    "sass-loader": "^8.0.0",
    "spectron": "^9.0.0",
    "style-loader": "^1.0.0",
    "url-loader": "^2.0.0",
    "vue": "^2.5.16",
    "vue-electron": "^1.0.6",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.4.1",
    "vue-router": "^3.0.7",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.4.2",
    "vuex": "^3.0.1",
    "webpack": "^4.10.2",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.1.7",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-merge": "^4.1.2"
  }
}
